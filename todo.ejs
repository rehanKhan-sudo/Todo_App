<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Colorful Todo List Template with Bold Headings</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
  />
  <style>
    body {
      font-family: 'Inter', sans-serif;
      background: linear-gradient(135deg, #fceabb 0%, #f8b500 100%);
      min-height: 100vh;
      margin: 0;
      padding: 2rem;
      box-sizing: border-box;
    }
    button {
      transition: background-color 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
    }
    button:focus {
      outline: none;
      box-shadow: 0 0 0 3px rgba(255, 193, 7, 0.6);
    }
    button:hover {
      transform: scale(1.1);
      box-shadow: 0 8px 15px rgba(255, 193, 7, 0.5);
    }
    .task-item {
      transition: background-color 0.4s ease, box-shadow 0.4s ease, transform 0.3s ease;
      cursor: default;
    }
    .task-item:hover {
      background-color: #fff3cd; /* light yellow */
      box-shadow: 0 10px 20px rgba(243, 166, 0, 0.4);
      transform: translateY(-4px);
    }
    /* Make container scrollable on smaller screens */
    .container {
      max-width: 1200px;
      margin: 0 auto;
      background: rgba(255 255 255 / 0.95);
      border-radius: 1.5rem;
      padding: 3rem 4rem;
      box-shadow: 0 20px 40px rgba(0,0,0,0.1);
      overflow-x: auto;
    }
    /* Table header styling */
    .task-headers {
      display: grid;
      grid-template-columns: 2fr 1fr 1fr 1fr 3fr 1fr;
      gap: 1rem;
      font-weight: 900; /* extra bold */
      color: #b45309; /* amber-700 */
      border-bottom: 3px solid #fbbf24; /* amber-400 */
      padding-bottom: 0.75rem;
      margin-bottom: 1rem;
      user-select: none;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }
    /* Task row grid */
    .task-row {
      display: grid;
      grid-template-columns: 2fr 1fr 1fr 1fr 3fr 1fr;
      gap: 1rem;
      align-items: center;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1 class="text-4xl font-extrabold text-yellow-700 mb-10 flex items-center gap-4 justify-center drop-shadow-lg">
      <i class="fas fa-tasks text-yellow-500"></i>
      Colorful Todo List
    </h1>

    <form action="/TODO" method="POST" class="space-y-8 mb-12">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div>
          <label for="title" class="block text-yellow-800 font-bold mb-3 flex items-center gap-3 text-lg">
            <i class="fas fa-heading text-yellow-600"></i> Title
          </label>
          <input
            type="text"
            id="title"
            name="title"
            placeholder="Task title"
            required
            class="w-full px-5 py-4 border-4 border-yellow-300 rounded-2xl focus:outline-none focus:ring-4 focus:ring-yellow-400 text-xl font-semibold shadow-lg placeholder-yellow-400 transition"
          />
        </div>

        <div>
          <label for="category" class="block text-yellow-800 font-bold mb-3 flex items-center gap-3 text-lg">
            <i class="fas fa-tags text-yellow-600"></i> Category
          </label>
          <select
            id="category"
            name="category"
            class="w-full px-5 py-4 border-4 border-yellow-300 rounded-2xl focus:outline-none focus:ring-4 focus:ring-yellow-400 text-xl font-semibold shadow-lg transition"
          >
            <option value="Work" selected>Work</option>
            <option value="Personal">Personal</option>
            <option value="Shopping">Shopping</option>
            <option value="Others">Others</option>
          </select>
        </div>

        <div>
          <label for="priority" class="block text-yellow-800 font-bold mb-3 flex items-center gap-3 text-lg">
            <i class="fas fa-flag text-yellow-600"></i> Priority
          </label>
          <select
            id="priority"
            name="priority"
            required
            class="w-full px-5 py-4 border-4 border-yellow-300 rounded-2xl focus:outline-none focus:ring-4 focus:ring-yellow-400 text-xl font-semibold shadow-lg transition"
          >
            <option value="" disabled selected>Select priority</option>
            <option value="Low" class="text-green-700">Low</option>
            <option value="Medium" class="text-yellow-700">Medium</option>
            <option value="High" class="text-red-700">High</option>
          </select>
        </div>

        <div>
          <label for="due-date" class="block text-yellow-800 font-bold mb-3 flex items-center gap-3 text-lg">
            <i class="fas fa-calendar-alt text-yellow-600"></i> Due Date
          </label>
          <input
            type="date"
            id="due-date"
            name="due-date"
            required
            class="w-full px-5 py-4 border-4 border-yellow-300 rounded-2xl focus:outline-none focus:ring-4 focus:ring-yellow-400 text-xl font-semibold shadow-lg transition"
          />
        </div>
      </div>

      <div>
        <label for="description" class="block text-yellow-800 font-bold mb-3 flex items-center gap-3 text-lg">
          <i class="fas fa-align-left text-yellow-600"></i> Description
        </label>
        <textarea
          id="description"
          name="description"
          rows="5"
          placeholder="Task description"
          class="w-full px-5 py-4 border-4 border-yellow-300 rounded-2xl focus:outline-none focus:ring-4 focus:ring-yellow-400 resize-none text-xl font-semibold shadow-lg placeholder-yellow-400 transition"
        ></textarea>
      </div>

      <button
        type="submit"
        class="w-full bg-yellow-500 hover:bg-yellow-600 text-white font-extrabold py-4 rounded-2xl shadow-xl flex items-center justify-center gap-4 text-2xl transition"
      >
        <i class="fas fa-plus"></i> Add Task
      </button>
    </form>

    <h2 class="text-3xl font-extrabold text-yellow-700 mb-6 flex items-center gap-4 justify-center drop-shadow-md">
      Tasks
    </h2>

    <div class="task-headers">
      <div>Title</div>
      <div>Category</div>
      <div>Priority</div>
      <div>Due Date</div>
      <div>Description</div>
      <div class="text-center">Actions</div>
    </div>

    <div class="space-y-6">
      
     <% for(let task of tasks){%>
      <div class="task-item bg-gradient-to-r from-green-100 via-lime-200 to-green-100 rounded-3xl p-6 shadow-2xl task-row">
        <h3 class="text-2xl font-extrabold text-green-900 transition"><%=task.title%></h3>
        <span class="text-green-800 font-bold bg-green-300 rounded-full px-4 py-2 text-base shadow-inner flex items-center justify-center"><%=task.category%></span>
        <span class="text-green-700 font-extrabold bg-green-200 rounded-full px-4 py-2 text-base shadow-inner flex items-center justify-center"><%=task.priority%></span>
        <span class="text-green-900 font-semibold text-base select-none flex items-center justify-center"><%=task.date.toString().split(" ").slice(0,4).join(" ")%></span>
        <p class="text-green-900 text-lg font-semibold max-w-xl"><%=task.description%></p>
        <div class="flex items-center gap-5 justify-center">
          <form action="/TODO/<%=task._id%>">
          <button
            title="Update Task"
            class="bg-blue-500 hover:bg-blue-600 text-white p-3 rounded-3xl shadow-lg transition transform hover:scale-110 hover:shadow-xl"
          >
            <i class="fas fa-edit text-xl"></i>
          </button>
          </form>

          <form action="/TODO/<%=task._id%>?_method=DELETE" method="POST">
          <button
            title="Delete Task"
            class="bg-red-500 hover:bg-red-600 text-white p-3 rounded-3xl shadow-lg transition transform hover:scale-110 hover:shadow-xl"
          >
            <i class="fas fa-trash-alt text-xl"></i>
          </button>
          </form>
        </div>
      </div>
      <%}%>
    </div>
  </div>
</body>
</html>