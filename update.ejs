<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Colorful Update Task - Full Screen Responsive</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
  />
  <style>
    body {
      font-family: 'Inter', sans-serif;
      background: linear-gradient(135deg, #f9f7f1 0%, #fceabb 100%);
      min-height: 100vh;
      margin: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2rem;
    }
    input, select, textarea {
      transition: box-shadow 0.3s ease, border-color 0.3s ease, background-color 0.3s ease;
      background-color: white;
    }
    input:focus, select:focus, textarea:focus {
      box-shadow: 0 0 10px 3px rgba(251, 191, 36, 0.7);
      border-color: #fbbf24;
      background-color: #fff9db;
      outline: none;
    }
    button {
      transition: background-color 0.3s ease, transform 0.2s ease, box-shadow 0.3s ease;
    }
    button:hover {
      background-color: #f59e0b;
      transform: scale(1.05);
      box-shadow: 0 8px 20px rgba(245, 158, 11, 0.6);
    }
    button:focus {
      outline: none;
      box-shadow: 0 0 0 4px rgba(245, 158, 11, 0.7);
    }
    .container {
      width: 100%;
      max-width: 900px;
      background: white;
      border-radius: 1.5rem;
      padding: 3rem 4rem;
      box-shadow: 0 20px 40px rgba(0,0,0,0.1);
      box-sizing: border-box;
      overflow-y: auto;
      max-height: 90vh;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1 class="text-4xl font-extrabold text-yellow-700 mb-10 flex items-center gap-4 justify-center drop-shadow-lg">
      <i class="fas fa-edit text-yellow-600"></i>
      Update Task
    </h1>

    <form method="post" action="/TODO/<%=task._id%>?_method=PUT" class="space-y-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div>
          <label for="title" class="block text-yellow-800 font-bold mb-3 flex items-center gap-3 text-lg">
            <i class="fas fa-heading text-yellow-600"></i> Title
          </label>
          <input
            type="text"
            id="title"
            name="title"
            value="<%=task.title%>"
            required
            class="w-full px-5 py-4 border-4 border-yellow-300 rounded-2xl text-xl font-semibold shadow-lg placeholder-yellow-400"
            placeholder=<%=task._title%>
          />
        </div>

        <div>
          <label for="category" class="block text-yellow-800 font-bold mb-3 flex items-center gap-3 text-lg">
            <i class="fas fa-tags text-yellow-600"></i> Category
          </label>
          <select
            id="category"
            name="category"
            value="<%=task.category%>"
            class="w-full px-5 py-4 border-4 border-yellow-300 rounded-2xl text-xl font-semibold shadow-lg"
          >
            <option value="Work" selected>Work</option>
            <option value="Personal">Personal</option>
            <option value="Shopping">Shopping</option>
            <option value="Others">Others</option>
          </select>
        </div>

        <div>
          <label for="priority" class="block text-yellow-800 font-bold mb-3 flex items-center gap-3 text-lg">
            <i class="fas fa-flag text-yellow-600"></i> Priority
          </label>
          <select
            id="priority"
            name="priority"
            required
            class="w-full px-5 py-4 border-4 border-yellow-300 rounded-2xl text-xl font-semibold shadow-lg"
          >
            <option value="low">Low</option>
            <option value="medium" selected>Medium</option>
            <option value="high">High</option>
          </select>
        </div>

        <div>
          <label for="due-date" class="block text-yellow-800 font-bold mb-3 flex items-center gap-3 text-lg">
            <i class="fas fa-calendar-alt text-yellow-600"></i> Due Date
          </label>
          <input
            type="date"
            id="due-date"
            name="due-date"
            value="<%=task.date%>"
            required
            class="w-full px-5 py-4 border-4 border-yellow-300 rounded-2xl text-xl font-semibold shadow-lg"
          />
        </div>
      </div>

      <div>
        <label for="description" class="block text-yellow-800 font-bold mb-3 flex items-center gap-3 text-lg">
          <i class="fas fa-align-left text-yellow-600"></i> Description
        </label>
        <textarea
          id="description"
          name="description"
          rows="5"
          class="w-full px-5 py-4 border-4 border-yellow-300 rounded-2xl resize-none text-xl font-semibold shadow-lg placeholder-yellow-400"
          placeholder=""
        ><%=task.description%></textarea>
      </div>

      <button
        type="submit"
        class="w-full bg-yellow-400 text-yellow-900 font-extrabold py-4 rounded-3xl shadow-xl flex items-center justify-center gap-4 text-2xl hover:bg-yellow-500"
      >
        <i class="fas fa-save"></i> Save Changes
      </button>
    </form>
  </div>
</body>
</html>